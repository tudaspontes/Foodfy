
<div class="item">
    <div>Recipe's image</div>
    <div>
        <input 
            type="url" 
            name="image" 
            placeholder="put here the url of the image"
            value="{{ admin.recipe_image}}"    
        >
    </div>
</div>

<div class="item">
    <div>Recipe's name</div>
    <div>
        <input 
            type="text" 
            name="name" 
            placeholder="ex: 300g of cooked rice"
            value="{{ admin.name}}"    
        >
    </div>
</div>

<div class="item">
    <div>Author</div>
    <div>
        <input 
            type="text" 
            name="author" 
            placeholder="ex: 300g of cooked rice"
            value="{{ admin.author }}"    
        >
    </div>
</div>

<div class="item">
    <div id="ingredients">
        <div>Ingredients</div>
        <div class="ingredient">
            <input
                type="text"
                name="ingredients[]"
                value="{{ admin.ingredient }}"
                placeholder="Ingredient"
            />
        </div>
    </div>
        <button type="button" class="add-ingredient">Add Ingredient</button>
</div>


<div class="item">
    <div>Meal prep</div>
    <div>
        <input 
            type="text" 
            name="preparation" 
            placeholder="step by step"
            value="{{ admin.preparation}}"    
        >
        <a href="/">Add new step</a>
    </div>
    
</div>

<div class="item">
    <div>Additional information</div>
    <div>
        <input 
            type="text" 
            name="information" 
            placeholder="put here some useful info about the recipe"
            value="{{ admin.info}}"    
        >
    </div>
</div>



